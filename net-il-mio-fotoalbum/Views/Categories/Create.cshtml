@model Category

@{
    ViewData["Title"] = "Add new Category";

}

<div class="row my-5 justify-content-center">
    <div class="col-6">

<form asp-controller="Categories" class="form-control p-4 bg-dark text-warning" asp-action="Create" method="post">
    @Html.AntiForgeryToken()


            <div class="mb-3 input-group">
                <label class="fw-bold text-primary input-group-text">Name:</label>
                <input type="text" class="form-control shadow-none" asp-for="@Model.Name" />
                <span asp-validation-for=" @Model.Name" class="text-danger"></span>
            </div>
            <hr/>
    <button class="btn btn-outline-light" type="reset">Reset</button>
    <button class="btn btn-warning" type="submit">Add</button>


</form>
    </div>
    </div>